<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.projectstepbystep.mycontactlist.ContactDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textStyle="bold"
        android:id="@+id/contact_detail"
        android:textSize="23sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_below="@+id/contact_detail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/detail_phone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_below="@+id/detail_name"
        android:layout_alignLeft="@+id/detail_name"
        android:layout_alignStart="@+id/detail_name" />

    <TextView
        android:id="@+id/detail_note"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:text="Note"
        android:textSize="20sp"
        android:gravity="start"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/detail_phone"
        android:layout_alignLeft="@+id/detail_phone"
        android:layout_alignStart="@+id/detail_phone" />

    <TextView
        android:id="@+id/detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Date"
        android:textSize="11sp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/delete_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/delete_button"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
